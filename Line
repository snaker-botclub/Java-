import java.util.HashMap;
import java.util.Map;

class Line {
    String name;
    Map<String, Map<String, Integer>> connections;

    public Line(String name) {
        this.name = name;
        this.connections = new HashMap<>();
    }

    public void addConnection(String start, String end, int distance) {
        connections.computeIfAbsent(start, k -> new HashMap<>()).put(end, distance);
        connections.computeIfAbsent(end, k -> new HashMap<>()).put(start, distance);
    }
}
