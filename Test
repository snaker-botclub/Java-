        List<String> shortestPath = subwaySystem.getShortestPath("华中科技大学站", "光谷广场站");
        subwaySystem.printShortestPath(shortestPath);

        // 功能5：打印最短路径
        subwaySystem.printShortestPath(shortestPath);

