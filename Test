public class Test {
    public static void main(String[] args) {
        SubwaySystem subwaySystem = new SubwaySystem();
        try {
            subwaySystem.loadSubwayData("C:\\Users\\wcq12\\Desktop\\学习文件\\subway.txt");
        } catch (IOException e) {
            System.err.println("无法读取地铁数据文件");
            return;
        }

        // 功能1：识别所有中转站
        System.out.println("所有地铁中转站：");
        Set<String> transferStations = subwaySystem.getTransferStations();
        for (String station : transferStations) {
            System.out.println(station);
        }

        // 功能2：查询某一站点距离小于n的所有站点
        System.out.println("距离华中科技大学站距离小于1公里的站点：");
        List<String> nearbyStations = subwaySystem.getNearbyStations("华中科技大学站", 1);
        for (String station : nearbyStations) {
            System.out.println(station);
        }

        // 功能3：返回所有连接起点和终点的路径集合
        System.out.println("从华中科技大学站到光谷广场站的所有路径：");
        List<List<String>> allPaths = subwaySystem.getAllPaths("华中科技大学站", "光谷广场站");
        for (List<String> path : allPaths) {
            System.out.println(path);
        }

